<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".ResumeActivity"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="40dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/destino"
            android:layout_marginBottom="20dp"
            android:textSize="25sp"
            android:fontFamily="@string/font"
            android:textColor="@color/text"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/txtDestino"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:fontFamily="@string/font"
            android:textColor="@color/text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/total_de_pessoas"
            android:textSize="25sp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@string/font"
            android:textColor="@color/text"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/txtPessoas"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:fontFamily="@string/font"
            android:textColor="@color/text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/dias_de_viagem"
            android:textSize="25sp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@string/font"
            android:textColor="@color/text"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/txtDias"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@string/font"
            android:textColor="@color/text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblHospedagem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/hospedagem_dinheiro"
            android:textSize="25sp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@string/font"
            android:textColor="@color/text"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/txtHospedagem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@string/font"
            android:textColor="@color/text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblGasolina"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/gasolina_dinheiro"
            android:textSize="25sp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@string/font"
            android:textColor="@color/text"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/txtGasolina"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:fontFamily="@string/font"
            android:textColor="@color/text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblRefeicoes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/refeicoes_dinheiro"
            android:textSize="25sp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@string/font"
            android:textColor="@color/text"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/txtRefeicoes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@string/font"
            android:textColor="@color/text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblAerea"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/tarifas_aereas_dinheiro"
            android:textSize="25sp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@string/font"
            android:textColor="@color/text"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/txtAerea"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@string/font"
            android:textColor="@color/text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblOutros"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/outros_gastos_dinheiro"
            android:textSize="25sp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@string/font"
            android:textColor="@color/text"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/txtOutros"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@string/font"
            android:textColor="@color/text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/total_dinheiro"
            android:textSize="25sp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@string/font"
            android:textColor="@color/text"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@string/font"
            android:textColor="@color/text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/total_por_pessoa_dinheiro"
            android:textSize="25sp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@string/font"
            android:textColor="@color/text"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/txtTotalPorPessoa"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@string/font"
            android:textColor="@color/text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@string/font"
            android:backgroundTint="@color/primary"
            android:layout_weight="45"
            android:text="@string/voltar"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_weight="10"/>
        <Button
            android:id="@+id/btnApagar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@string/font"
            android:backgroundTint="@color/danger"
            android:layout_marginBottom="15dp"
            android:layout_weight="45"
            android:text="@string/apagar"/>

    </LinearLayout>


</LinearLayout>
</ScrollView>